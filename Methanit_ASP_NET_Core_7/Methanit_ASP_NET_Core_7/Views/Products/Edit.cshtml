@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Methanit_ASP_NET_Core_7.Models.Products

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Fridges store</title>
    <link rel="stylesheet" href="~/css/CreatePM.css" />
</head>
<body>
     <div class="content">
        <h2 class="v2">Редактирование продукта</h2>
        <form asp-action="Edit" asp-controller="Products" asp-route-ProductsId="@Model.ProductsId">
            <p>
                <label asp-for="Name">Название продукта:</label><br />
                <input type="text" asp-for="Name" />
                <span asp-validation-for="Name" style="Color: white; font-weight: 700;" />
            </p>
            <p>
                <label asp-for="Default_Quantity">Количество:</label><br />
                <input type="number" asp-for="Default_Quantity" />
                <span asp-validation-for="Default_Quantity" style="Color: white; font-weight: 700;" />
            </p>
            <p>
                <input type="submit" class="viv"value="Сохранить" />
            </p>
        </form>
        <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
        <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
        <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>
    </div>
    
</body>
</html>

