@model Methanit_ASP_NET_Core_7.Models.Fridge

<link rel="stylesheet" href="~/css/CreateFridge.css"/>
<h2>Добавление холодильника</h2>
<div class="content">
    <form asp-action="create" asp-controller="Fridge" enctype="multipart/form-data">
        <div class="inputInfoFridge">
            <p>
                <label asp-for="Name">Название холодильника:</label><br />
                <input type="text" asp-for="Name" />
                <span asp-validation-for="Name" style="Color: black; font-weight: 700;" />
            </p>
            <p>
                <label asp-for="Owner_Name">Имя владельца:</label><br />
                <input type="text" asp-for="Owner_Name" />
                <span asp-validation-for="Name" style="Color: black; font-weight: 700;" />
            </p>
            <p>
                <label asp-for="Fridge_ModelId">Модель холодильника:</label><br />
                <select asp-for="Fridge_ModelId" asp-items="ViewBag.Fridges">
                    <option selected="selected" disabled="disabled">Выберите модель</option>
                </select>
                <span asp-validation-for="Fridge_ModelId" style="Color: black; font-weight: 700;" />
            </p>
            <p>
                <label asp-for="Image">Изображение:</label><br />
                <input type="file" asp-for="Image" accept=".jpg, .jpeg, .png" />
                <span asp-validation-for="Image" style="Color: black; font-weight: 700;" />
            </p>
                <input type="submit" class="sendButton" value="Создать" />
        </div>
        <div class="scroll-table">
            <table>
                <thead>
                    <tr>
                        <td>Название продукта</td>
                        <td>Количество</td>
                    </tr>
                </thead>
            </table>
            <div class="scroll-table-body">
		        <table>
			        <tbody>
                        @foreach (var item in ViewBag.Products)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>
                                    <input type="number" name="products[@item.ProductsId]" min="1" max="5000"/>
                                </td>
                            </tr>
                        }
			        </tbody>
		        </table>
	        </div>	
            
        </div>
    </form>
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>
</div>
