@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<FridgeProducts.Models.FridgeModel>
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Fridges store</title>
    <link rel="stylesheet" href="~/css/FridgeModelsStyle.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Chivo+Mono:ital,wght@1,300&family=Exo+2:wght@100&family=Exo:wght@100&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
</head>
<body>
    <h1>Список моделей холодильников</h1>
    <div>
        <table>
        <tr>
            <th>Название</th>
            <th>Год выпуска</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Year</td>
                 <td>
                        <form asp-controller="FridgeModels" asp-action="Edit" method="get" asp-route-id="@item.FridgeModelId">
                        <input type="submit" value="Редактировать" />
                    </form>
                </td>
                <td>
                    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="@("#DeleteFridgeModel-"+item.FridgeModelId)" data-url="@Url.Action($"Deletes/{item.FridgeModelId}")">
                        Delete
                    </button>
                    @await Html.PartialAsync("Deletes", item)
                </td>
            </tr>
        }
    </table>
    </div>

    <div id="button_Container">
        <a id="addButton" asp-controller="FridgeModels" asp-action="Create">Добавить</a>
    </div>
</body>
</html>

